<div id="global-container">
    <h1>Ironhack cinema</h1>
    <h2>Click on the movie to check the showtimes!</h2>

    <div id="movies-container">
            {{#each movies }}
            <div class="each-movie">
                <a href="/movie/{{ id }}"><img src="{{image}}"></a>
                <h3>{{title}}</h3>
                <a href="/movie/{{ id }}">See more</a>
                <a href="/movie/{{ id }}/delete">Delete this movie from the database</a>
            </div>
            {{/each}}
    </div>
</div>
